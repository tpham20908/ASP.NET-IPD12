@model IEnumerable<VidPlace.Models.Media>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
    <title>Index</title>
</head>
<body>
    @Html.Partial("_NavBar")

    <div class="container jumbotron">
        <div class="btn btn-default bg-info mb-4">
            <h6>@Html.ActionLink("New Media", "NewMedia")</h6>
        </div>
        <h2>Media list:</h2>
        <div class="card bg-info">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th><h2>Name:</h2></th>
                        <th><h2>Rent date:</h2></th>
                        <th><h2>Image:</h2></th>
                    </tr>
                </thead>
                <tbody>
                    
                    @foreach (var media in Model)
                    {
                    <tr>
                        <td>@media.Name</td>
                        <td>@media.RentDate.ToShortDateString()</td>
                        <td><img src="@media.ImageUrl" style="width: 120px; height: 80px;" /></td>
                        <td>
                            @Html.ActionLink("Detail Media", "DetailMedia", "Media", new { id = media.Id }, null )
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    @Html.Partial("_Footer")
</body>
</html>
