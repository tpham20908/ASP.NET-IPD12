@model VidPlace.Models.MediaVM
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
    <title>NewMedia</title>
</head>
<body>
    @Html.Partial("_NavBar")
    <div class="container">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                @using (Html.BeginForm())
                {
                    @Html.HiddenFor(m => m.Media.Id)
                    <div class="form-group">
                        @Html.LabelFor(m => m.Media.Name)
                        @Html.TextBoxFor(m => m.Media.Name, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Media.NumberInStock)
                        @Html.TextBoxFor(m => m.Media.NumberInStock, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Media.ReleaseDate)
                        @Html.TextBoxFor(m => m.Media.ReleaseDate, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Media.RentDate)
                        @Html.TextBoxFor(m => m.Media.RentDate, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Media.MediaTypeId)
                        @Html.DropDownListFor(
                       m => m.Media.MediaTypeId,
                       new SelectList(Model.MediaTypes, "Id", "Name"),
                       "Please enter type",
                       new {@class="form-control"}
                       )
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Media.GenresId)
                        @Html.DropDownListFor(
                       m => m.Media.GenresId,
                       new SelectList(Model.Genres, "Id", "Name"),
                       "Please enter genre",
                       new {@class="form-control"}
                       )
                    </div>
                }
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>
    @Html.Partial("_Footer")
</body>
</html>
