@model VidPlace.Models.Customer
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
    <title>DeleteCustomer</title>
</head>
<body>
    @Html.Partial("_NavBar")
    <div class="container">
        <div class="jumbotron">
            <h2>Delete Customer Record</h2>

            <div>
                <dl>
                    <dt>@Html.LabelFor(m => m.Name)</dt>
                    <dd>@Html.DisplayFor(m => m.Name)</dd>
                    <dt>@Html.LabelFor(m => m.MembershipId)</dt>
                    <dd>@Html.DisplayFor(m => m.Membership.Name)</dd>
                </dl>
            </div>

            @using (Html.BeginForm())
            {
                <div class="form-group">
                    <input type="submit" value="Delete" class="btn btn-default" /> | 
                    @Html.ActionLink("Back to List", "Index", "Media")
                </div>
            }

        </div>
        
    </div>
    @Html.Partial("_Footer")
</body>
</html>
