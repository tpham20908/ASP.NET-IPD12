@model VidPlace.Models.Media

@{
    Layout = null;
    ViewBag.Title = "Customer Detail";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
    <title>Detail</title>
</head>
<body>
    @Html.Partial("_NavBar")
    <div class="container">
        <div class="jumbotron">
            <h4 class="text-center text-justify text-info">@Model.Name</h4>
            <hr />
            <table class="table table-bordered table-hover bg-info">
                <tr>
                    <td>Id</td>
                    <td>Name</td>
                    <td>Release Date</td>
                    <td>Number in stock</td>
                    <td>Type</td>
                    <td>Rental Date</td>
                    <td>Genre</td>
                    <td>Image</td>
                </tr>
                <tr>
                    <td>@Model.Id</td>
                    <td>@Model.Name</td>
                    <td>@Model.ReleaseDate.ToShortDateString()</td>
                    <td>@Model.NumberInStock</td>
                    <td>@Model.MediaType.Name</td>
                    <td>@Model.RentDate.ToShortDateString()</td>
                    <td>@Model.Genres.Name</td>
                    <td><img src="@Model.ImageUrl" style="width: 100%; height: auto;" /></td>
                </tr>
            </table>

            <hr />
            
            <p>
                @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
                @Html.ActionLink("Back to List", "getmedia")
            </p>
        </div>
    </div>

    @Html.Partial("_Footer")
</body>
</html>
