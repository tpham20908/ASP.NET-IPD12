@model VidPlace.Models.Customer
@{
    ViewBag.Title = "Customer's Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Memebership Type: @Model.Membership.Name </li>
    @if (Model.Birthdate.HasValue)
    {
        <li>Date of Birth: @Model.Birthdate.Value.ToShortDateString()</li>
    }

</ul>

